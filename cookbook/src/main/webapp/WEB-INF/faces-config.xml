<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
  	
  	<!-- JSF and Spring are integrated -->
  	<application>
    	<el-resolver>
    		org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
  
	  <resource-bundle>
		<base-name>messages</base-name>
		<var>msg</var>
	   </resource-bundle>

  	</application>
	
	<!-- configuration of navigation rules -->
	
	<navigation-rule>
        <from-view-id>/pages/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/pages/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>search</from-outcome>
            <to-view-id>/pages/search.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
		
	<navigation-rule>
	    <from-view-id>/pages/index.xhtml</from-view-id> 
	    <navigation-case>
	        <from-outcome>success</from-outcome>
            <to-view-id>/pages/success.xhtml</to-view-id>
        </navigation-case>
         <navigation-case>
	        <from-outcome>error</from-outcome>
            <to-view-id>/pages/error.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
	        <from-outcome>advancedsearch</from-outcome>
            <to-view-id>/pages/advancedsearch.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
	        <from-outcome>showrecipe</from-outcome>
            <to-view-id>/pages/showrecipe.xhtml</to-view-id>
        </navigation-case>
        
    </navigation-rule>

	<!-- disable browser back -->
	<lifecycle>
		<phase-listener id="nocache">tr.metu.edu.sm.cookbook.util.CacheControlPhaseListener</phase-listener>
	</lifecycle>
    
</faces-config>